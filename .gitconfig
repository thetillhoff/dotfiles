[user]
	name = Till Hoffmann
	email = till@thetillhoff.de
	signingkey = ~/.ssh/id_ed25519.pub
[commit]
	gpgsign = false
[init]
	defaultBranch = main
	templateDir = /Users/tillhoffmann/.git-template
[pull]
	rebase = true
[gpg]
	format = ssh
[push]
	autoSetupRemote = true

# config for https://github.com/dandavison/delta, installed via `brew install git-delta`
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
