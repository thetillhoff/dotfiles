# Don't use this file for "conditional ssh key setup". Just use your most common key by default.
# And for all other repos use `git config --local core.sshCommand "ssh -i ~/.ssh/id_something"`

# SSH shouldn't just try all local ssh keys, instead only use the specified ones.
IdentitiesOnly yes

# When an SSH key was used once, there's no need to enter it's password a second time
AddKeysToAgent yes

# Host github.com
#    Hostname github.com
#    IdentityFile ~/.ssh/id_ed25519

# Setting defaults
Host *
    IdentityFile ~/.ssh/id_ed25519
